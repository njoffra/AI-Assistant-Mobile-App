<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProjectMobilne.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProjectMobilne"
    xmlns:views="clr-namespace:ProjectMobilne.Views"
    Shell.FlyoutBehavior="Disabled">
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginView}"
        Route="Login" />
    <ShellContent
        Title="Register"
        ContentTemplate="{DataTemplate views:RegisterView}"
        Route="Register" />
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
