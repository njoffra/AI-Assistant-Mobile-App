<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:link="clr-namespace:ProjectMobilne.Shared"
             x:Class="ProjectMobilne.Views.RegisterView"
             Title="Register">
    <VerticalStackLayout Padding="25" MaximumWidthRequest="800">
        <VerticalStackLayout>
            <Label FontAttributes="Bold" Text="Email"/>
            <Entry Margin="0,2,0,0" Text="{Binding Email}"/>
        </VerticalStackLayout>
        <VerticalStackLayout Margin="0,10,0,0">
            <Label FontAttributes="Bold" Text="Password"/>
            <Entry Margin="0,2,0,0" Text="{Binding Password}" IsPassword="True"/>
        </VerticalStackLayout>
        <VerticalStackLayout Margin="0,10,0,0">
            <Label FontAttributes="Bold" Text="ConfirmPassword"/>
            <Entry Margin="0,2,0,0" Text="{Binding ConfirmPassword}" IsPassword="True"/>
        </VerticalStackLayout>
        <Button Text="Register" Margin="25,25,25,0" Command="{Binding RegisterCommand}" />
        <link:Link Route="//Login" Text="Have an account? Sign In"/>
    </VerticalStackLayout>
</ContentPage>