<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectMobilne.Views.ChatView"
             Title="ChatView">
    <Grid Margin="20"
          RowDefinitions="Auto,*,Auto">
        <Label Text="{Binding Request}"
               FontSize="14"
               FontAttributes="Bold"
               HorizontalOptions="Center" 
               />
        <ScrollView x:Name="scrollView"
                    Grid.Row="1"
                    VerticalOptions="FillAndExpand"
                    Scrolled="OnScrollViewScrolled">
            <StackLayout VerticalOptions="FillAndExpand">
                <Editor Margin="0,2,0,0" Text="{Binding Request}" AutoSize="TextChanges" />
                <Button Text="Ask It" Margin="25,25,25,25" Command="{Binding ProceedRequestCommand}"/>
                <Frame BackgroundColor="WhiteSmoke" Margin="2" Padding="4">
                <Label Text="{Binding ResponseText}" LineBreakMode="WordWrap"  
                       TextColor="Red"
                       BackgroundColor="Black"
                       Padding="10,5,5,10"
                       />
                </Frame>

            </StackLayout>
        </ScrollView>
      
    </Grid>
</ContentPage>